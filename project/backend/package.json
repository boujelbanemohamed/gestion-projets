{
  "name": "gestionprojet-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application GestionProjet",
  "main": "src/server.ts",
  "scripts": {
    "start": "node server-final.js",
    "dev": "node server-final.js",
    "dev-ts": "nodemon src/server.ts",
    "build": "tsc",
    "test": "node run_tests.js",
    "test:postman": "newman run postman_collection.json -e environment.json",
    "test:all": "npm run test",
    "test:report": "npm run test && open test_report.html",
    "install:newman": "npm install -g newman",
    "setup": "npm install && npm run install:newman"
  },
  "keywords": [
    "api",
    "backend",
    "project-management",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "GestionProjet Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^7.2.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "newman": "^6.0.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gestionprojet/backend.git"
  },
  "bugs": {
    "url": "https://github.com/gestionprojet/backend/issues"
  },
  "homepage": "https://github.com/gestionprojet/backend#readme"
}
