                  "",
                  "pm.test(\"Response has notifications array\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('notifications');",
                  "    pm.expect(response.notifications).to.be.an('array');",
                  "});",
