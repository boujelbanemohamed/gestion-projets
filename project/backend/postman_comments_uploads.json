      "name": "üí¨ Comments",
      "item": [
        {
          "name": "Get Comments by Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has comments array\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('comments');",
                  "    pm.expect(response.comments).to.be.an('array');",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.comments.length > 0) {",
                  "        pm.collectionVariables.set('commentId', response.comments[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/comments/task/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comments", "task", "{{taskId}}"]
            }
          }
        },
